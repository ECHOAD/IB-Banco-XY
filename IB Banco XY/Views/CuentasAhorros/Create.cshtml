@using Microsoft.AspNetCore.Identity;
@using System.Security.Claims;


@model Entidades.CuentasAhorro

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CuentasAhorro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id_Usuario" type="hidden" value="@User.FindFirst(ClaimTypes.NameIdentifier).Value"/>
            </div>
            <div class="form-group">
                <label asp-for="Codg_Cuenta" class="control-label"></label>
                <input asp-for="Codg_Cuenta" class="form-control" />
                <span asp-validation-for="Codg_Cuenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Balance_Actual" class="control-label"></label>
                <input asp-for="Balance_Actual" class="form-control" />
                <span asp-validation-for="Balance_Actual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

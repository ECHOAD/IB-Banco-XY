@model IEnumerable<Entidades.EstadoPrestamo>


<div class="col-12" style="background:rgba(31, 66, 180, 0.664); height:50px; padding-bottom:40px;">
    <h2 class="title_formHeader p-2" style="color:white;">Estado de Prestamo</h2>
</div>
<table class="table_minimalist">
    <thead>
        <tr class="table-header">
            <th class="header__item">
                Cuenta de Origen
            </th>
            <th class="header__item ">
                Pagado
            </th>
            <th class="header__item ">
                Restante
            </th>
            <th class="header__item ">
                Fecha
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-row">
                <td class="table-data">
                    xxxxxxx@(item.Cuenta.Codg_Cuenta[^4..])
                </td>
                <td class="table-data" style="color:green;">
                    + @item.Monto_pagado.ToString("C", CultureInfo.CurrentCulture)
                </td>
                <td class="table-data">
                    @item.Monto_restante.ToString("C", CultureInfo.CurrentCulture)
                </td>
                <td class="table-data">
                    @item.Fecha
                </td>
            </tr>
        }
    </tbody>
</table>

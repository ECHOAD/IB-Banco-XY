@model List<TarjetaCredito>

<div class="container" id="cardsAccounts">
    <div class="row">

        @foreach (var creditcard in Model)
        {
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="card card_detail cardsAccount">
                    <div class="card-body">
                        <h5 class="card-title">Numero de Tarjeta: @creditcard.numero_tarjetaCredito</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Credito asignado: @creditcard.Balance.ToString("C",CultureInfo.CurrentCulture)</h6>
                        <h6 class="card-subtitle mb-2 text-muted">Credito asignado: @creditcard.Balance_disponible.ToString("C",CultureInfo.CurrentCulture)</h6>

                        <a href="cuenta/estadoCuenta/@creditcard.Id" class="card-link">Estado de tarjeta credito</a>
                        <a href="/transact/@creditcard.Id" class="card-link">Transferencia</a>
                    </div>
                </div>
            </div>

        }

    </div>
</div>